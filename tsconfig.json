{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,      
    "importHelpers": true,
    "baseUrl": "../../",
    "outDir": "../../build",  
    "rootDir": "../../",   
    "strict": true,    
    "moduleResolution": "node",                                                    
    "esModuleInterop": true,                
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "App/*":["App/*"],
      "Config/*":["Config/*"],
      "Database/*":["Database/*"],
      "Resources/*":["Resources/*"],
      "Routes/*":["Routes/*"],
      "Utils/*":["./Utils/*"],
      "Elucidate/*":["./node_modules/expresswebcorets/lib/*"],
    },
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ]
  }
}